
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Event Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>

    <a asp-controller="Event" asp-action="index">Calendar</a>
    <a asp-controller="Event" asp-action="add">Add</a>
    <div></div><div></div>
    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Event List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>Budget</th>
                    <th>Profit</th>
                    <th>Location</th>

                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Event in ViewBag.Event)
                {
                    <tr>
                        <td>@Event.Id</td>
                        <td>@Event.Title</td>
                        <td>@Event.Description</td>
                        <td>@Event.StartDate</td>

                        <td>@Event.EndDate</td>

                        <td>@Event.Budget</td>
                        <td>@Event.Profit</td>

                        <td>@Event.Location</td>

                        <td>
                            <a asp-controller="Event" asp-action="edit" asp-route-id="@Event.Id">Edit</a>
                            |
                            <a asp-controller="Event" asp-action="delete" asp-route-id="@Event.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>
