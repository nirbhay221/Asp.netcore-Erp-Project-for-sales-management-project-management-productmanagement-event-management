
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inventory Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="Inventory" asp-action="add">Add</a>
    <div></div><div></div>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>

    <div></div><div></div>
    <a asp-controller="Inventory" asp-action="nextindex">Chart</a>

    <div></div><div></div>
    <a asp-controller="Inventory" asp-action="nextnextindex">Calendar</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Inventory Product List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Project</th>
                    <th>RentedFrom</th>
                    <th>RentedTo</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Inventory in ViewBag.Inventory)
                {
                    <tr>
                        <td>@Inventory.Id</td>
                        <td>@Inventory.Name</td>
                        <td>@Inventory.Status</td>
                        <td>@Inventory.Price</td>

                        <td>@Inventory.Quantity</td>

                        <td>@Inventory.Project</td>

                        <td>@Inventory.RentedFrom</td>

                        <td>@Inventory.RentedTo</td>

                        <td>
                            <a asp-controller="Inventory" asp-action="edit" asp-route-id="@Inventory.Id">Edit</a>
                            |
                            <a asp-controller="Inventory" asp-action="delete" asp-route-id="@Inventory.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>
