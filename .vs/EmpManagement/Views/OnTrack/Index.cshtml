
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OnTrack Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="OnTrack" asp-action="add">Add</a>
    <div></div><div></div>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">OnTrack Project List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>Owner</th>
                    <th>Lead</th>
                    <th>Budget</th>
                    <th>Profit</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var OnTrack in ViewBag.OnTrack)
                {
                    <tr>
                        <td>@OnTrack.Id</td>
                        <td>@OnTrack.Name</td>
                        <td>@OnTrack.Status</td>
                        <td>@OnTrack.Category</td>

                        <td>@OnTrack.Owner</td>

                        <td>@OnTrack.Lead</td>
                        <td>@OnTrack.Budget</td>
                        <td>@OnTrack.Profit</td>

                        <td>
                            <a asp-controller="OnTrack" asp-action="edit" asp-route-id="@OnTrack.Id">Edit</a>
                            |
                            <a asp-controller="OnTrack" asp-action="delete" asp-route-id="@OnTrack.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>
<style>
    body {
        background: url('https://images.pexels.com/photos/1323712/pexels-photo-1323712.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500') no-repeat fixed center center;
        background-size: cover;
        font-family: Montserrat;
    }
