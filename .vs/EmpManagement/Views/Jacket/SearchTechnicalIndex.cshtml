@model PagedList.IPagedList<EmpManagement.Models.Jacket>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jacket Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>

</head>
<body>
    <div class="container" style="margin-top: 20px;">


        <form method="get" asp-controller="jacket" asp-action="searchTechnical">
            <input type="text" name="keyword" value="@ViewBag.keyword" />
            <input type="submit" value="Search" />
            @if (Model != null)
            {
                <h4 class="text-center text-uppercase">Technical To Do List</h4>
                <table class="table table-striped table-bordered">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Role</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Jacket in Model)
                        {
                            <tr>
                                <td>@Jacket.Id</td>
                                <td>@Jacket.Name</td>
                                <td>@Jacket.Description</td>

                                <td>@Jacket.Priority</td>

                                <td>@Jacket.Status</td>

                                <td>@Jacket.Role</td>


                                <td>
                                    <a asp-controller="Jacket" asp-action="edit" asp-route-id="@Jacket.Id">Edit</a>
                                    |
                                    <a asp-controller="Jacket" asp-action="delete" asp-route-id="@Jacket.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                                </td>


                            </tr>

                        }
                    </tbody>
                </table>}
        </form>
    </div>
</body>
</html>
<style>
    body {
        background: url('https://images.pexels.com/photos/1323712/pexels-photo-1323712.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500') no-repeat fixed center center;
        background-size: cover;
        font-family: Montserrat;
    }
</style>